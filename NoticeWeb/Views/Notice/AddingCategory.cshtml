@model Notice.Models.Categories

@{
    ViewBag.Title = "AddingCategory";
}

<h2>AddingCategory</h2>


@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Categories</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">

                    <div class="form-row mb-4">
                        <div class="col">
                        </div>
                        <div class="col">
                            <!-- First name -->
                            <input type="text" id="defaultRegisterFormFirstName" class="form-control" placeholder="Category ID">
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="form-row mb-4">
                        <div class="col">
                        </div>
                        <div class="col">
                            <input type="text" id="defaultRegisterFormEmail" class="form-control mb-4" placeholder="Category Name">
                        </div>
                        <div class="col">
                        </div>
                    </div>
                    <div class="form-row mb-4">
                        <div class="col">
                        </div>
                        <div class="col">
                            <textarea type="text" id="defaultRegisterFormEmail" class="form-control mb-4" width="200px" placeholder="Category Description"></textarea>
                        </div>
                        <div class="col">
                        </div>
                    </div>

                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }



<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
