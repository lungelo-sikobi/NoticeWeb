@model IEnumerable<Notice.Models.aNotice>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All Notices</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateAndTime_p)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>


        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAndTime_p)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.NoticeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.NoticeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NoticeID })
            </td>
        </tr>
        }

    </table>
</body>
</html>
