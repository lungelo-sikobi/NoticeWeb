@model IEnumerable<Notice.Models.aNotice>

@{
    ViewBag.Title = "ViewNotice";
}

<h2>ViewNotice</h2>

<p>
    @Html.ActionLink("Create New", "AddingNotice")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NoticeID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NoticeID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditNotice", new { id=item.NoticeID}) |
            @Html.ActionLink("Details", "NoticeDetails", new { id = item.NoticeID }) |
            @Html.ActionLink("Delete", "DeleteNotice", new { id = item.NoticeID })
        </td>
    </tr>
}

</table>
