@model Notice.Models.Admin

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{


    @Html.Raw(TempData["msg"])
    @Html.AntiForgeryToken()
    <h2 class="text-center"><b>Add Admin</b></h2>
    <div style="width:100%;height:1px;background-color:maroon;">

    </div>
    <br />
    <hr />
    <div class="row">
        <div class="col-lg-4"></div>
        <div class="form-horizontal col-lg-8">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.Raw(TempData["CreateCat"])

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-md-12">
                        <label for="name">Admin Name</label>
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Please enter Admin name" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-md-12">
                        <label for="name">Admin SurName</label>
                        @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", @placeholder = "Please enter Admin Surname" })
                        @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-md-12">
                        <label for="name">Admin Email</label>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Please enter Email Address" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-md-12">
                        <label for="comment">Category :</label>
                        @Html.DropDownListFor(item => Model.CategoryID, ViewBag.CategoryID as SelectList, "-- Select --", new { @class = "form-control"})
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger", @id = "myDropdown" })

                    </div>
                </div>
                </div>

            <div class="form-group" id="DepartID" hidden>
                <div class="row">
                    <div class="col-lg-4 col-sm-4 col-md-12">
                        <label for="comment">Department:</label>
                        @Html.DropDownListFor(item => Model.DepartID, ViewBag.DepartID as SelectList, "-- Select --", new { @class = "form-control" } )
                        @Html.ValidationMessageFor(model => model.DepartID, "", new { @class = "text-danger", @id = "myDropdown" })

                    </div>
                </div>
            </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-4 col-sm-4 col-md-12">
                            <label for="name">Super Admin</label>
                            @Html.DropDownListFor(x => x.SuperAdmin, new SelectListItem[]{
                            new SelectListItem() {Text = "Yes",Value="true"},
                            new SelectListItem() {Text = "No", Value="false"},
                            } ,new { @class = "form-control", @placeholder = "Please enter select departmrnt ID" })

                        </div>
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-12">
                        <input type="submit" value="Create" class="btn btn-primary b" style="align-content:center" />
                    </div>
                </div>
            </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    $(function () {
    $('#CategoryID').change(function () {
        var value = $(this).val();
        if (value == '4020') {
            $('#DepartID').show();
        } else {
            $('#DepartID').hide();
        }
    });
});</script>
}
